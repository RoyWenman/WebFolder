/*   OPER/SURGERY   TABLE  *********************************************/

.OPERTable{
	margin-top: 0;
	padding-left: 10px;
	width:100%;
	vertical-align: top;
	text-align: left;
	height:auto;
	overflow-y: auto;
}


.OPERTable th,
.OPERTable td{
	border: 1px solid #ccc;
}

.OPERTable tr th{
	background: #66A3FF;
	border:1px solid #a1a1a1;
	font-family: 'Open+Sans' sans-serif;
	font-weight: normal;
	text-shadow:rgba(0, 0, 0, 0.8) 1px 1px 3px;
  	color: #FFF;
  	height:28px;
  	padding-left: 10px;
}


.OPERTable tbody tr td{
	border: 1px solid #ccc;
	vertical-align: middle;
	background: #fff;
	color: #444;
}


.OPERTable tbody tr:hover td{
	background-color: #fffacd
}


.OPERCode{
	width:100px;
	padding-left: 10px;
}

.OPERName{
	width:750px;
	padding-left: 10px;
}
