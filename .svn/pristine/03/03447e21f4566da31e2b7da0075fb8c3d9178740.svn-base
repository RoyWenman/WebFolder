.box {
border: 1px solid black;
width: 25%;
height: 25%;
text-align: center;
vertical-align: top;
margin: 20px;
position: relative;
display: inline-block;
}
.box h3 {
border-bottom: 1px solid black;
background-color: red;
vertical-align: top;
height: 24px;
position: relative;
margin-top: 0;
padding-top: 0;
}
.inner {
height: 100%;
width: 100%;
vertical-align: middle;
text-align: center;
padding: 100px;
position: relative;
}
.icon_container {
display: inline-block;
padding: 10px;
}
.icon_container:hover {
background-color: blue;
cursor: pointer;
}
.leftbar {
height: 100%;
float: left;
border-left: 1px solid black;
background-color: gray;
position: relative;
display: block;
}
.leftPanel {
list-style: none;
padding-right: 5px;
padding-left: 5px;
margin-top: 0px;
margin-left: -1px;
width: 100px;
height: 100%;
display: inline-block;
position: fixed;
background-color: grey;
float: left;
}
.leftPanel li {
padding-bottom: 20px;
}
.mainPanel {
width: 90%;
height: 100%;
margin-left: 115px;
float: left;
display: inline-block;
}
.patientPanel {
background-color: green;
margin: 0px;
padding: 10px;
height: 50px;
color: white;
}
.patientDemographics {
margin-top: 10px;
padding-left: 10px;
}
.patientDemographics li {
float: left;
margin: 0px;
padding-left: 10px;
padding-right: 10px;
list-style: none;
}